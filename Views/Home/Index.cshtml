<body>
    <div class=>
        <h1>Registration</h1>

        <form asp-action="register" asp-controller="Home" method="POST">
            <div class="form-group">
                <strong>First Name</strong> <br><span asp-validation-for="FirstName"></span>
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter First Name">
            </div>
            <div class="form-group">
                <span asp-validation-for="LastName"></span>
                <label for="exampleInputEmail1">Last Name</label>
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Last Name">
            </div>
            <div class="form-group">
                <span asp-validation-for="Email"></span>
                <label for="exampleInputEmail1">Email Address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group">
                <span asp-validation-for="Password"></span>
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <div class="form-group">
                <span asp-validation-for="ConfirmPassword"></span>
                <label for="exampleInputPassword1">Confirm Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <input class="bt" type="submit" value="Register">
        </form>
        <div class=>
            <partial name="Login"/>
        </div>
</body>
</html>























